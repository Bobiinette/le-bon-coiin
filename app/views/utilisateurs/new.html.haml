.row
	.col-md-12
		.page-header
			%h1
				%center
					Inscription
.row
	.col-md-2 
	.col-md-8
		.page-header
			%h4
				Veuillez renseigner les informations suivantes : 
				%br
				= form_for @utilisateur do |f|
					%p
						Nom
					= f.text_field :nom
					%br
					%p
						Prénom
					= f.text_field :prenom
					%br
					%p
						Adresse Mail
					= f.text_field :email
					%br
					%p
						Numéro de téléphone
					= f.text_field :telephone
					%br
					%p
						Promotion
					= f.select :promotion, [["2012", "2012"], ["2013", "2013"]]
					%br
					%p
						Pseudo
					= f.text_field :pseudo
					%br
					%p
						Mot de Passe
					= f.text_field :pass
					%br
					%p
						Avatar (via url/optionnel)
					= f.text_field :avatar
				%br
.row
	%center
		%li
			= link_to 'Retour', annonces_index_path
