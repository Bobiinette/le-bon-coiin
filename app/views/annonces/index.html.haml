.row							
	.col-md-12
		.page-header
			#content
				%center
					%h1
						%br
						Le Bon Coiin

.row
	- if @utilisateur
		%h3
			%center
				Bienvenu @utilisateur.prenom
			%li
				= link_to "Cr√©er une nouvelle annonce", annonces_new_path
	- else
		%center
			%h3
				Bienvenu visiteur.
			%li
				= link_to "Se connecter", '/utilisateurs/login'
			%li
				= link_to "S'inscrire", '/utilisateurs/new'
.row
	.col-md-2
	.col-md-10
		%table.table.table-striped
			%tbody
				- @annonces.each do |annonce|
					%tr
						.col-md-6
							%h3
								= annonce.titre
						.col-md-2
							%h2
								Prix : 
								= annonce.prix
						.col-md-12
							%p
								= annonce.description
							%li
								= link_to 'Voir l\'annonce', annonce
			
