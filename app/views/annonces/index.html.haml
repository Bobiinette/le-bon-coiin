.row							
	.col-md-12
		.page-header
			#content
				%center
					%h1
						%br
						Le Bon Coiin

.row
	- if @utilisateur != nil
		%h3
			%center
				Bienvenu 
				= @utilisateur.pseudo
				%p
					%h4
						%li
							= link_to "Créer une nouvelle annonce", annonces_new_path
	- else
		%center
			%h3
				Bienvenu visiteur.
			%li
				= link_to "Se connecter", '/utilisateurs/login'
			%li
				= link_to "S'inscrire", '/utilisateurs/new'
.row
	.col-md-2
	.col-md-10
		%table.table.table-striped
			%tbody
				- @annonces.each do |annonce|
					%tr
						.col-md-6
							%h3
								= annonce.titre
						.col-md-2
							%h2
								Prix : 
								= annonce.prix
						- if @utilisateur != nil
							.col-md-12
								%p
									= annonce.description
								%li
									= link_to 'Voir l\'annonce', annonce
								- if @utilisateur.id == annonce.utilisateur_id
									%p
										%li
											= link_to 'Éditer l\'annonce', edit_annonce_path(annonce)
								= form_tag '/annonces/signaler', method: :post do
									%input{type: "submit", name: "Signaler", value: "Signaler"}

